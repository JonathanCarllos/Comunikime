@model Comunikime.Models.Categoria

@{
    ViewData["Title"] = "Delete";
}

<div class="text-center">
    <h4>Tem certeza que deseja excluir?</h4>
</div>


<div>
    <h4>Categoria</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CategoriaNome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoriaNome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CategoriaId" />
        <input type="submit" value="Excluir" class="btn btn-danger" />&nbsp;<a asp-action="Index" class="btn btn-primary"><i class="fa fa-circle-arrow-left"></i> Volta para a lista</a>

    </form>
</div>