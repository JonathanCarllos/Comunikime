@model IEnumerable<Comunikime.Models.Categoria>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Categorias</h1>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fa fa-circle-plus"></i> Criar Nova Categoria</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoriaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoriaNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td align="right">
                    <a asp-action="Edit" asp-route-id="@item.CategoriaId" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.CategoriaId" class="btn btn-success"><i class="fa fa-search"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.CategoriaId" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
