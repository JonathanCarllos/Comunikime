@model IEnumerable<Comunikime.Models.Pedido>

@{
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>Pedidos</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sobrenome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco1)
            </th>      
            <th>
                @Html.DisplayNameFor(model => model.Cidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>                    
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sobrenome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco1)
            </td>           
            <td>
                @Html.DisplayFor(modelItem => item.Cidade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefone)
            </td>                 
                <td align="right">
                    <a asp-action="Edit" asp-route-id="@item.PedidoId" class="btn btn-warning"><i class="fa fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.PedidoId" class="btn btn-success"><i class="fa fa-search"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.PedidoId" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                    <a asp-action="PedidoProduto" asp-route-id="@item.PedidoId" class="btn btn-dark"><i class="fa-solid fa-eye"></i></a>
                </td>
        </tr>
}
    </tbody>
</table>
